<view class="page">
  <view class="profile-card">
    <view class="avatar-wrap" bindtap="onAvatarTap">
      <image wx:if="{{currentUser.avatar}}" class="avatar" mode="aspectFill" src="{{currentUser.avatar}}"></image>
      <view wx:else class="avatar-fallback">{{currentUser.initial}}</view>
    </view>
    <view class="name-wrap" bindtap="onNameTap">
      <view class="name">{{currentUser.name}}</view>
    </view>
  </view>

  <button class="logout-btn" bindtap="onLogout" loading="{{loggingOut}}" disabled="{{loggingOut}}">
    {{loggingOut ? '退出中...' : '退出登录'}}
  </button>
</view>
