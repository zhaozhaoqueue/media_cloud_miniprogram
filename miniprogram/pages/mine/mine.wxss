.page {
  min-height: 100vh;
  background: #f7f3eb;
  color: #1f1f1f;
  padding: 24px 18px 32px;
}

.profile-card {
  background: radial-gradient(circle at 20% 20%, #fff6df 0%, #f0e4cf 45%, #e4d2b1 100%);
  border-radius: 20px;
  padding: 22px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-btn {
  width: 88px;
  height: 88px;
  border-radius: 50%;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.68);
  padding: 0;
  border: none;
  line-height: 88px;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-fallback {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6b5e4b;
  font-weight: 700;
  font-size: 28px;
}

.avatar-tip {
  margin-top: 8px;
  font-size: 11px;
  color: #7f6f57;
}

.name-wrap {
  margin-top: 14px;
  width: 100%;
}

.name-input {
  height: 44px;
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.92);
  padding: 0 12px;
  text-align: center;
  font-size: 18px;
  color: #1f1f1f;
  font-weight: 600;
}

.save-btn {
  margin-top: 16px;
  border-radius: 999px;
  background: #1f1f1f;
  color: #ffffff;
  font-size: 15px;
  border: none;
}

.logout-btn {
  margin-top: 12px;
  border-radius: 999px;
  background: #ffffff;
  color: #1f1f1f;
  font-size: 15px;
  border: 1px solid #e1d9c9;
}
