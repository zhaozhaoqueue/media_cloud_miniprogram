.page {
  min-height: 100vh;
  background: #f7f3eb;
  padding: 20px 18px 28px;
}

.hero {
  border-radius: 20px;
  overflow: hidden;
  height: 320px;
  background: #e8e2d6;
  box-shadow: 0 10px 24px rgba(0, 0, 0, 0.08);
}

.hero-img {
  width: 100%;
  height: 100%;
}

.info {
  margin-top: 16px;
  background: #ffffff;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 8px 18px rgba(0, 0, 0, 0.06);
}

.title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}

.title {
  font-size: 18px;
  font-weight: 700;
  min-width: 0;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.edit-trigger {
  font-size: 12px;
  color: #8a7d68;
  border: 1px solid #e1d9c9;
  border-radius: 999px;
  padding: 2px 10px;
  flex-shrink: 0;
}

.meta {
  margin-top: 6px;
  color: #6f6f6f;
  font-size: 12px;
}

.actions {
  margin-top: 16px;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

button.primary {
  background: #1f1f1f;
  color: #ffffff;
  border-radius: 999px;
}

button.ghost {
  background: #ffffff;
  color: #1f1f1f;
  border: 1px solid #e1d9c9;
  border-radius: 999px;
}

button.danger {
  background: #ffffff;
  color: #d93025;
  border: 1px solid #f2c2bf;
  border-radius: 999px;
}

.danger-row {
  margin-top: 12px;
}
