.page {
  min-height: 100vh;
  background: #f7f3eb;
  padding: 20px 18px 28px;
}

.hero {
  border-radius: 20px;
  overflow: hidden;
  height: 320px;
  background: #e8e2d6;
  box-shadow: 0 10px 24px rgba(0, 0, 0, 0.08);
}

.hero-img {
  width: 100%;
  height: 100%;
}

.info {
  margin-top: 16px;
  background: #ffffff;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 8px 18px rgba(0, 0, 0, 0.06);
}

.title {
  font-size: 18px;
  font-weight: 700;
}

.meta {
  margin-top: 6px;
  color: #6f6f6f;
  font-size: 12px;
}

.actions {
  margin-top: 16px;
  display: flex;
  gap: 12px;
}

button.primary {
  flex: 1;
  background: #1f1f1f;
  color: #ffffff;
  border-radius: 999px;
}

button.ghost {
  flex: 1;
  background: #ffffff;
  color: #1f1f1f;
  border: 1px solid #e1d9c9;
  border-radius: 999px;
}
