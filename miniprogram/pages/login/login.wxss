.page {
  min-height: 100vh;
  background: #f7f3eb;
  padding: 26px 18px 32px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.hero {
  background: radial-gradient(circle at 20% 20%, #fff6df 0%, #f0e4cf 45%, #e4d2b1 100%);
  border-radius: 20px;
  padding: 22px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 22px;
  font-weight: 700;
  letter-spacing: 0.3px;
}

.subtitle {
  margin-top: 6px;
  color: #5e523d;
  font-size: 13px;
}

.card {
  background: #ffffff;
  border-radius: 18px;
  padding: 18px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 16px;
  font-weight: 600;
}

.card-desc {
  margin-top: 6px;
  color: #6f6f6f;
  font-size: 12px;
}

button.primary {
  margin-top: 16px;
  background: #1f1f1f;
  color: #ffffff;
  border-radius: 999px;
}
