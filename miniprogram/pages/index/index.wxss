.page {
  min-height: 100vh;
  background: #f7f3eb;
  color: #1f1f1f;
  padding: 24px 18px 32px;
}

.hero {
  background: radial-gradient(circle at 20% 20%, #fff6df 0%, #f0e4cf 45%, #e4d2b1 100%);
  border-radius: 20px;
  padding: 22px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 28px;
  font-weight: 700;
  letter-spacing: 0.5px;
}

.subtitle {
  margin-top: 6px;
  color: #5e523d;
  font-size: 14px;
}

.section {
  margin-top: 24px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 12px;
}

.card-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.card {
  background: #ffffff;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 16px;
  font-weight: 600;
}

.card-meta {
  margin-top: 6px;
  color: #6f6f6f;
  font-size: 12px;
}

.actions {
  margin-top: 24px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

button.primary {
  background: #1f1f1f;
  color: #ffffff;
  border-radius: 999px;
}

button.ghost {
  background: #ffffff;
  color: #1f1f1f;
  border-radius: 999px;
  border: 1px solid #e1d9c9;
}

.join-panel {
  margin-top: 18px;
  background: #ffffff;
  border-radius: 18px;
  padding: 16px;
  box-shadow: 0 8px 18px rgba(0, 0, 0, 0.06);
}

.join-title {
  font-size: 14px;
  font-weight: 600;
}

.join-input {
  margin-top: 10px;
  height: 40px;
  border-radius: 12px;
  background: #f5f0e8;
  padding: 0 12px;
  font-size: 14px;
}

.join-actions {
  margin-top: 12px;
  display: flex;
  gap: 10px;
}

.join-actions button.primary,
.join-actions button.ghost {
  flex: 1;
}
