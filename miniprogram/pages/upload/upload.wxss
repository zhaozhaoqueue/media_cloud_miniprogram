.page {
  min-height: 100vh;
  background: #f7f3eb;
  color: #1f1f1f;
  padding: 24px 18px 32px;
}

.header {
  background: radial-gradient(circle at 20% 20%, #fff6df 0%, #f0e4cf 45%, #e4d2b1 100%);
  border-radius: 20px;
  padding: 22px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 24px;
  font-weight: 700;
}

.subtitle {
  margin-top: 6px;
  color: #5e523d;
  font-size: 13px;
}

.actions {
  margin-top: 16px;
  display: flex;
  gap: 12px;
}

button.primary {
  flex: 1;
  background: #1f1f1f;
  color: #ffffff;
  border-radius: 999px;
}

button.ghost {
  flex: 1;
  background: #ffffff;
  color: #1f1f1f;
  border: 1px solid #e1d9c9;
  border-radius: 999px;
}

.preview {
  margin-top: 20px;
}

.preview-title {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 12px;
}

.preview-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
}

.preview-img {
  width: 100%;
  height: 90px;
  border-radius: 12px;
  background: #e8e2d6;
}
