.page {
  min-height: 100vh;
  background: #f7f3eb;
  padding: 22px 18px 28px;
}

.header {
  background: #ffffff;
  border-radius: 18px;
  padding: 18px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 20px;
  font-weight: 700;
}

.subtitle {
  margin-top: 6px;
  color: #6f6f6f;
  font-size: 12px;
}

.actions {
  margin-top: 16px;
  display: flex;
  gap: 12px;
}

button.primary {
  flex: 1;
  background: #1f1f1f;
  color: #ffffff;
  border-radius: 999px;
}

button.ghost {
  flex: 1;
  background: #ffffff;
  color: #1f1f1f;
  border: 1px solid #e1d9c9;
  border-radius: 999px;
}

.preview {
  margin-top: 20px;
}

.preview-title {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 12px;
}

.preview-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
}

.preview-img {
  width: 100%;
  height: 90px;
  border-radius: 12px;
  background: #e8e2d6;
}
