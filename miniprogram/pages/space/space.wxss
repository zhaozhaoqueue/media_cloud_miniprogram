.page {
  min-height: 100vh;
  background: #f7f3eb;
  color: #1f1f1f;
  padding: 24px 18px 32px;
}

.header {
  background: radial-gradient(circle at 20% 20%, #fff6df 0%, #f0e4cf 45%, #e4d2b1 100%);
  border-radius: 20px;
  padding: 22px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
}

.space-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
}

.space-name {
  font-size: 20px;
  font-weight: 700;
  min-width: 0;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.edit-name-trigger {
  font-size: 12px;
  color: #6b5e4b;
  border: 1px solid #d9c8ac;
  background: rgba(255, 255, 255, 0.56);
  border-radius: 999px;
  padding: 3px 10px;
  flex-shrink: 0;
}

.space-meta {
  margin-top: 6px;
  color: #5e523d;
  font-size: 12px;
}

.toolbar {
  margin-top: 16px;
  display: flex;
  gap: 12px;
}

button.primary {
  flex: 1;
  background: #1f1f1f;
  color: #ffffff;
  border-radius: 999px;
}

button.ghost {
  flex: 1;
  background: #ffffff;
  color: #1f1f1f;
  border: 1px solid #e1d9c9;
  border-radius: 999px;
}

.grid {
  margin-top: 18px;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.photo {
  position: relative;
  border-radius: 16px;
  overflow: hidden;
  height: 160px;
  background: #e8e2d6;
}

.photo-img {
  width: 100%;
  height: 100%;
}

.photo-mask {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 8px 10px;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.5) 100%);
}

.photo-name {
  color: #ffffff;
  font-size: 12px;
}

.list-empty,
.list-status {
  margin-top: 14px;
  text-align: center;
  color: #8a7d68;
  font-size: 12px;
}

.popup-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 18px;
  z-index: 99;
}

.popup-card {
  width: 100%;
  max-width: 320px;
  background: #ffffff;
  border-radius: 16px;
  padding: 18px 16px;
  box-shadow: 0 14px 32px rgba(0, 0, 0, 0.18);
}

.popup-title {
  font-size: 16px;
  font-weight: 700;
}

.popup-note {
  margin-top: 6px;
  font-size: 13px;
  color: #6f6f6f;
}

.popup-code {
  margin-top: 10px;
  font-size: 30px;
  letter-spacing: 3px;
  font-weight: 700;
  text-align: center;
  color: #1f1f1f;
}

.popup-expire {
  margin-top: 8px;
  font-size: 12px;
  color: #8a7d68;
  text-align: center;
}

.popup-actions {
  margin-top: 14px;
  display: flex;
  gap: 10px;
}
