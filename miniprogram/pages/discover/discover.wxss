.page {
  min-height: 100vh;
  background: #f7f3eb;
  padding: 20px 18px;
}

.card {
  background: #ffffff;
  border-radius: 16px;
  padding: 20px;
  box-shadow: 0 8px 18px rgba(0, 0, 0, 0.06);
}

.title {
  font-size: 18px;
  font-weight: 700;
  color: #1f1f1f;
}

.desc {
  margin-top: 8px;
  font-size: 13px;
  color: #6b5e4b;
  line-height: 1.6;
}
