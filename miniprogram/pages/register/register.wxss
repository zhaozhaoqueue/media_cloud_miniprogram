.page {
  min-height: 100vh;
  background: #f7f3eb;
  padding: 26px 18px 32px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.hero {
  background: radial-gradient(circle at 20% 20%, #fff6df 0%, #f0e4cf 45%, #e4d2b1 100%);
  border-radius: 20px;
  padding: 22px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 22px;
  font-weight: 700;
  letter-spacing: 0.3px;
}

.subtitle {
  margin-top: 6px;
  color: #5e523d;
  font-size: 13px;
}

.card {
  background: #ffffff;
  border-radius: 18px;
  padding: 18px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
}

.input-label {
  margin-top: 12px;
  font-size: 12px;
  color: #5e523d;
}

.input-label:first-child {
  margin-top: 0;
}

.text-input {
  margin-top: 8px;
  height: 42px;
  border-radius: 12px;
  background: #f5f0e8;
  padding: 0 12px;
  font-size: 14px;
}

.avatar-preview {
  margin-top: 10px;
  width: 72px;
  height: 72px;
  border-radius: 50%;
  background: #efe7d8;
}

button.ghost {
  margin-top: 16px;
  background: #ffffff;
  color: #1f1f1f;
  border: 1px solid #e1d9c9;
  border-radius: 999px;
}

button.primary {
  margin-top: 12px;
  background: #1f1f1f;
  color: #ffffff;
  border-radius: 999px;
}
